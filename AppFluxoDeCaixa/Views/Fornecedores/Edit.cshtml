@model AppFluxoDeCaixa.Models.Fornecedor

@{
    ViewData["Title"] = "Editar Cliente";
}
<h1 class="display-5 text-light text-center">Editar Cadastro de Fornecedor</h1>


<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-12 col-md-8 mt-2">
            <input type="hidden" asp-for="FornecedorId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md mt-2">
            <label asp-for="Telefone" class="control-label"></label>
            <input asp-for="Telefone" class="form-control" />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label asp-for="CNPJ" class="control-label"></label>
            <input asp-for="CNPJ" class="form-control" />
            <span asp-validation-for="CNPJ" class="text-danger"></span>
        </div>
        <div class="col-md">
            <label asp-for="dataCadastro" class="control-label"></label>
            <input asp-for="dataCadastro" class="form-control" />
            <span asp-validation-for="dataCadastro" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-md-2">
            <label>Ativo?</label>
            <div class="form-group form-switch form-control-lg">
                <input class="form-check-input" type="checkbox" role="switch" asp-for="Ativo" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-4"><a class="btn btn-outline-secondary w-100 mt-4" asp-action="Index">Voltar</a></div>
        <div class="col-4"></div>
        <div class="col-4">
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success w-100 mt-4" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
